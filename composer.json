{
    "name": "sakusi4/laravel-smart-upsert",
    "description": "Drop-in smart upsert helper for Laravel Eloquent",
    "type": "library",
    "license": "MIT",
    "authors": [
      { "name": "junpark", "email": "junpark4395@gmail.com" }
    ],

    "require": {
      "php": "^8.1",
      "illuminate/database": "^10.0"
    },

    "autoload": {
      "psr-4": {
        "Sakusi4\\LaravelSmartUpsert\\": "src/"
      }
    },

    "autoload-dev": {
        "psr-4": {
          "Sakusi4\\LaravelSmartUpsert\\Tests\\": "tests/"
        }
    },

    "minimum-stability": "stable",
    "prefer-stable": true,

    "config": {
      "allow-plugins": {
        "pestphp/pest-plugin": true
      }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "orchestra/testbench": "^8.4",
        "pestphp/pest": "^2.34"
    }
}
